ScreenManagement:
	LoginScreen:
		name: "login_screen"
	MainMenuScreen:
		name: "mainmenu_screen"
	MacrocycleScreen:
		name: "macrocycle_screen"
	MesocycleScreen:
		name: "mesocycle_screen"
	MicrocycleScreen:
		name: "microcycle_screen"
	
	
<CustButtUpScrn2@Button>:
	on_release:
		app.root.transition.direction = "up"
		app.root.transition.duration = .2
		app.root.current = "mesocycle_screen"
	
<CustLabel@Label>:
	color: 0, 0, 0, 1
	canvas.before:
		Color:
			rgba: 1, 1, 1, 1
		Rectangle:
			pos: self.pos
			size: self.size
			
<LoginLabel@Label>:
	color: 0, 0, 0, 1
	size_hint: .1, .05
	canvas.before:
		Color:
			rgba: 1, 1, 1, 1
		Rectangle:
			pos: self.pos
			size: self.size
			
<LoginInput@TextInput>:
	size_hint: .3, .05
	write_tab: False
	multiline: False
	
	
<FailedLoginPopup>:
	size_hint: .5, .5
	auto_dismiss: False
	title: "Incorrect Login"
	BoxLayout:
		orientation: "vertical"
		Label:
			text: "Incorrect username or password"
		Button:
			text: "Close"
			on_press: root.dismiss()
			
<NewAccountPopup>:
	new_username: new_user_name
	new_password: new_pass_word
	
	size_hint: .5, .5
	auto_dismiss: False
	title: "Create New Account"
	GridLayout:
		rows: 3
		cols: 2
		spacing: 10
		padding: 10
		
		Label:
			text: "Enter New Username:"
		TextInput:
			id: new_user_name
			write_tab: False
			multiline: False
			on_parent: if args[1]: self.focus = True
			on_text_validate: root.add_credentials()
		Label:
			text: "Enter New Password:"
			id: new_pass_word
		TextInput:
			id: new_pass_word
			write_tab: False
			multiline: False
			on_text_validate:
				root.add_credentials()
				root.dismiss()
		Button:
			text: "Create Account"
			on_release:
				root.add_credentials()
				root.dismiss()
			
<LoginScreen>:
	username: user_name
	password: pass_word

	FloatLayout:
		LoginLabel:
			text: "Username:"
			pos_hint: {"x": .35, "y": .55}
		LoginInput:
			id: user_name
			pos_hint: {"x": .45, "y": .55}
			on_parent: if args[1]: self.focus = True
			on_text_validate: root.check_credentials()
		LoginLabel:
			text: "Password:"
			pos_hint: {"x": .35, "y": .50}
		LoginInput:
			id: pass_word
			pos_hint: {"x": .45, "y": .50}
			on_text_validate: root.check_credentials()
		Button:
			text: "Login"
			pos_hint: {"x": .65, "y": .45}
			size_hint: .1, .05
			on_release:
				root.check_credentials()
		Button:
			text: "Create New Account"
			color: 1, 0, 0, 1
			background_normal: ''
			pos_hint: {"x": .45, "y": .45}
			size_hint: .2, .05
			on_release:
				root.new_account()

<MainMenuScreen>:
	added_athlete_spinner_text_input: added_athlete
	spinner_values: spinner_id
	
	BoxLayout:
		orientation: "vertical"
		Button:
			size_hint_y: None
			height: 30
			size_hint_x: .1
			text: "To Login"
			on_press:
				app.root.transition.direction = "down"
				app.root.transition.duration = .2
				app.root.current = "login_screen"
				
		BoxLayout:
			orientation: "horizontal"
			size_hint_y: None
			height: 30
			Spinner:
				id: spinner_id
				text: "Athletes"
				values: ["first athlete", "second athlete"]			
				on_text: root.athlete_picked(spinner_id.text)
			TextInput:
				id: added_athlete
				write_tab: False
				multiline: False
				on_text_validate:
					root.add_athlete()
					
			Button:
				text: "Add Athlete"
				on_release:
					root.add_athlete()	
		# The below line is simply to move the above buttons to the top of the screen
		# a box layout does not allow you to move vertically whilst in a vertical layout
		CustLabel:
			text: ''
