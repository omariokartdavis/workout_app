ScreenManagement:
	ScreenOne:
	ScreenTwo:
	ScreenThree:
	
<ScreenOne>:
	name: "screen_one"
	
	BoxLayout:
		Button:
			text: "Macrocycle, Click to go to Mesocycle"
			on_press:
				root.manager.transition.direction = "left"
				root.manager.transition.duration = .5
				root.manager.current = "screen_two"
		Button:
			text: "Macrocycle, Click to go to Microcycle"
			on_press:
				root.manager.transition.direction = "left"
				root.manager.transition.duration = .5
				root.manager.current = "screen_three"
<ScreenTwo>:
	name: "screen_two"
	
	BoxLayout:
		Button:
			text: "Mesocycle, Click to go to Macrocycle"
			on_press:
				root.manager.transition.direction = "right"
				root.manager.transition.duration = .5
				root.manager.current = "screen_one"
		Button:
			text: "Mesocycle, Click to go to Microcycle"
			on_press:
				root.manager.transition.direction = "left"
				root.manager.transition.duration = .5
				root.manager.current = "screen_three"

<ScreenThree>:
	name: "screen_three"
	
	BoxLayout:
		Button:
			text: "Microcycle, Click to go to Macrocycle"
			on_press:
				root.manager.transition.direction = "right"
				root.manager.transition.duration = .5
				root.manager.current = "screen_one"
		Button:
			text: "Microcycle, Click to go to Mesocycle"
			on_press:
				root.manager.transition.direction = "right"
				root.manager.transition.duration = .5
				root.manager.current = "screen_two"
